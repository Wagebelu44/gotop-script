<div class="container-fluid">
    <div class="row">
        <div class="col-sm-10">
            <nav class="nav">
                <a class="nav-link {% if site['status'] =='all' %} filter-active  {% endif %}" href="{{ site['url'] }}">All</a>
                <a class="nav-link  {% if site['status'] =='active' %} filter-active  {% endif %}" href="{{ site['url'] }}?status=active">Active</a>
                <a class="nav-link {% if site['status'] =='Completed' %} filter-active  {% endif %}" href="{{ site['url'] }}?status=Completed">Completed</a>
                <a class="nav-link {% if site['status'] =='Canceled' %} filter-active  {% endif %}" href="{{ site['url'] }}?status=Canceled">Canceled</a>
            </nav>
        </div>

        <div class="col-sm-2 text-right search">
            <form action="{{ page['url'] }}" method="get" id="history-search">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search" value="{{search}}">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </span>
                </div>
            </form>
        </div>
            
        <div class="col-lg-12">
            <div class="card">
                <div class="card card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Link</th>
                                <th>Total charges</th>
                                <th>Quantity</th>
                                <th>Service</th>
                                <th>Runs</th>
                                <th>Interval</th>
                                <th>Total quantity</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for dripFeed in site['dripfeeds']['data'] %}
                            <tr>
                                <td>{{ dripFeed['id'] }}</td>
                                <td>{{ dripFeed['created_at'] }}</td>
                                <td class="link">{{ dripFeed['orders_link'] }}</td>
                                <td nowrap="">{{ dripFeed['total_charges'] }}</td>
                                <td>{{ dripFeed['service_quantity'] }}</td>
                                <td>{{ dripFeed['service_name'] }}</td>
                                <td class="nowrap">
                                {{ dripFeed['runOrders'] }} /  {{ dripFeed['total_quantity'] }} 
                                </td>
                                <td>{{ dripFeed['interval'] }}</td>
                                <td>{{ dripFeed['total_quantity'] }}</td>
                                <td>{{ dripFeed['status'] }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <div class="col-md-12 d-flex justify-content-center">
                        {{ site['dripfeeds'].links|raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
