<div class="container">
  <style>
    .filter-active {
        background-color: blue;
        color: #fff;
    }
    </style>
    <div class="row">
        <div class="col-lg-12">
            <nav class="nav">
                <a class="nav-link {% if site['status'] =='all' %} filter-active  {% endif %}" href="{{ site['url'] }}">All</a>
                <a class="nav-link  {% if site['status'] =='active' %} filter-active  {% endif %}" href="{{ site['url'] }}?status=active">Active</a>
                <a class="nav-link {% if site['status'] =='Completed' %} filter-active  {% endif %}" href="{{ site['url'] }}?status=Completed">Completed</a>
                <a class="nav-link {% if site['status'] =='Canceled' %} filter-active  {% endif %}" href="{{ site['url'] }}?status=Canceled">Canceled</a>
            </nav>
            <div class="card card-body">
                <table class="table {% if site['rtl'] %} rtl-table {% endif %}">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Link</th>
                        <th>Total charges</th>
                        <th>Quantity</th>
                        <th>Service</th>
                        <th>Runs</th>
                        <th>Interval</th>
                        <th>Total quantity</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for dripFeed in site['dripFeedOrderList'] %}
                        <tr>
                            <td>{{ dripFeed['id'] }}</td>
                            <td>{{ dripFeed['created_at'] }}</td>
                            <td class="link">{{ dripFeed['orders_link'] }}</td>
                            <td nowrap="">{{ dripFeed['total_charges'] }}</td>
                            <td>{{ dripFeed['service_quantity'] }}</td>
                            <td>{{ dripFeed['service_name'] }}</td>
                            <td class="nowrap">
                              {{ dripFeed['runOrders'] }} /  {{ dripFeed['total_quantity'] }} 
                            </td>
                            <td>{{ dripFeed['interval'] }}</td>
                            <td>{{ dripFeed['total_quantity'] }}</td>
                            <td>{{ dripFeed['status'] }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

            {% if pagination['count'] > 100 %}
                <ul class="pagination {% if site['rtl'] %} rtl-pagination {% endif %}">
                    {% if pagination['current'] != 1 %}
                        <li>
                            <a href="{{ page['url'] }}/{{ status }}/{{ pagination['last'] }}{% if search %}?search={{ search }}{% endif %}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    {% endif %}

                    {% set r, l = 3, 3 %}

                    {% if pagination['current'] == 1 %}
                        {% set r = 6 %}
                    {% endif %}

                    {% if pagination['current'] == 2 %}
                        {% set r = 5 %}
                    {% endif %}

                    {% if pagination['current'] >= pagination['pages'] %}
                        {% set l = 5 %}
                    {% endif %}

                    {#{% for i in 1..ceil(pagination['pages']) %}
            {% if i >= (pagination['current']-l) and i <= (pagination['current']+r) %}
              <li{% if i == pagination['current'] %} class="active"{% endif %}><a href="{{ page['url'] }}/{{ status }}/{{i}}{% if search %}?search={{ search }}{% endif %}">{{i}}</a></li>
            {% endif %}
            {% endfor %}#}

                    {% if pagination['current'] < pagination['pages'] %}
                        <li>
                            <a href="{{ page['url'] }}/{{ status }}/{{ pagination['next'] }}{% if search %}?search={{ search }}{% endif %}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    {%endif%}
                </ul>
            {% endif %}

        </div>
    </div>
</div>
