<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th class="width-service-name">Name</th>
                        <th class="nowrap">Rate</th>
                        <th class="nowrap">Minimum quantity</th>
                        <th class="nowrap">Maximum quantity</th>
                        <th class="nowrap">Average time
                            <span class="fa fa-exclamation-circle" data-toggle="tooltip" data-placement="top" title="Description"></span>
                        </th>
                        <th class="hidden-xs hidden-sm service-description__th">Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if site['service_count'] > 0 %}
                        {% for category in site['service_lists'] %}
                            {% if category['name'] %}
                                <tr>
                                    <td colspan="7"><strong>{{ category['name'] }}</strong></td>
                                </tr>
                            {% endif %}
                                {% for service in category['services'] %}
                                    <tr>
                                    <td>{{ service['id'] }}</td>
                                    <td class="service-name">{{ service['name'] }}</td>
                                    <td>{{ service['price'] }}</td>
                                    <td>{{ service['min_quantity'] }}</td>
                                    <td>{{ service['max_quantity'] }}</td>
                                    <td class="nowrap">{{ service['service_average_time'] }}</td>
                                    <td>{{ service['description'] }}</td>
                                    </tr>
                                {% endfor %}
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% if servicesText %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="well {% if site['rtl'] %} rtl-content {% endif %}">
                    {{ servicesText }}
                </div>
            </div>
        </div>
    </div>
{% endif %}