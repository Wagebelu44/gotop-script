<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{ page['meta_title'] }}</title>
    <meta name="keywords" content="{{ page['meta_title'] }}">
    <meta name="description" content="{{ page['meta_description'] }}">
    {% if site['favicon'] %}
        <link rel="shortcut icon" type="image/ico" href="{{ site['favicon'] }}" />
    {% endif %}
    <script>
        /* global instances */
        window.CSRF_TOKEN = "{{site['csrf_token']}}";
        window.base_url = "{{site['app_url']}}";
        /* end of global instances */
    </script>
    {% for style in site['styles'] %}
        <link rel="stylesheet" type="text/css" href="{{ style }}">
    {% endfor %}
</head>
<body>
<div class="wrapper">
    {% if site['horizontal_menu'] == 'No' %}
        <nav class="navbar-light bg-light shadow-sm" id="sidebar">
            <div class="sidebar-header">
                <a class="navbar-brand" href="{{ site['site_url'] }}">
                    {% if site['logo'] %}
                        <img style="width: 100px;" src="{{ site['logo'] }}">
                    {% else %}
                        Your Logo
                    {% endif %}
                </a>
            </div>
            <ul class="list-unstyled components">
                {% if site['auth'] %}
                    {% for menu in menus %}
                        <li{% if menu['page']['active'] %} class="nav-item active" {% else %}  class="nav-item" {% endif %}>
                            <a class="nav-link" href="{{ menu['page']['url'] }}">
                                {{ menu['menu_name'] }}
                            </a>
                        </li>
                    {% endfor %}
                {% else %}
                    {% for menu in menus %}
                        <li{% if menu['page']['active'] %} class="nav-item active" {% else %}  class="nav-item" {% endif %}>
                            <a class="nav-link" href="{{ menu['page']['url'] }}">
                                {{ menu['menu_name'] }}
                            </a>
                        </li>
                    {% endfor %}
                {% endif %}
            </ul>
        </nav>
    {% endif %}

    <div id="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            {% if site['horizontal_menu'] == 'Yes' %}
                <a class="navbar-brand" href="{{ site['site_url'] }}">
                    {% if site['logo'] %}
                        <img style="width: 100px;" src="{{ site['logo'] }}">
                    {% else %}
                        Your Logo
                    {% endif %}
                </a>
            {% endif %}

            {% if site['horizontal_menu'] == 'No' %}
                <button id="sidebarCollapse" class="navbar-toggler" type="button" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            {% endif %}

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                {% if site['horizontal_menu'] == 'Yes' %}
                    <ul class="navbar-nav">
                        {% if site['auth'] %}
                            {% for menu in menus %}
                                <li{% if menu['page']['active'] %} class="nav-item active" {% else %}  class="nav-item" {% endif %}>
                                    <a class="nav-link" href="{{ menu['page']['url'] }}">
                                        {{ menu['menu_name'] }}
                                    </a>
                                </li>
                            {% endfor %}
                        {% else %}
                            {% for menu in menus %}
                                <li{% if menu['page']['active'] %} class="nav-item active" {% else %}  class="nav-item" {% endif %}>
                                    <a class="nav-link" href="{{ menu['page']['url'] }}">
                                        {{ menu['menu_name'] }}
                                    </a>
                                </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                {% endif %}
                
                {% if site['auth'] %}
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a id="navbarDropdown" class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" v-pre>
                            {{ site['auth'].name }}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ site['logout_url']  }}" onclick="event.preventDefault();document.getElementById('logout-form').submit();">
                                Logout
                            </a>
                            <form id="logout-form" action="{{ site['logout_url']  }}" method="POST" class="d-none">
                                {{ site['csrf_field'] | raw }}
                            </form>
                        </div>
                    </li>
                </ul>
                {% endif %}
            </div>
        </nav>

        {{ content }}

    </div>
</div>

<footer class="border-top">
    <div class="footer-copyright text-center py-3">Â© 2020 Copyright:
        <a href="https://mdbootstrap.com/"> MDBootstrap.com</a>
    </div>
</footer>
{% for script in site['scripts'] %}
    <script type="text/javascript" src="{{ script }}"></script>
{% endfor %}
<script type="text/javascript">
    $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
        });
    });
</script>
</body>
</html>
