<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{ page['meta_title'] }}</title>
    <meta name="keywords" content="{{ page['meta_title'] }}">
    <meta name="description" content="{{ page['meta_description'] }}">
    {% if site['favicon'] %}
      <link rel="shortcut icon" type="image/ico" href="{{ site['favicon'] }}" />
    {% endif %}
    <script>
         /* global instances */
            window.CSRF_TOKEN = "{{site['csrf_token']}}";
            window.base_url = "{{site['app_url']}}";
        /* end of global instances */
    </script>
	{% for style in site['styles'] %}
    	<link rel="stylesheet" type="text/css" href="{{ style }}">
  	{% endfor %}
</head>
<body>
    <div class="container-fluid m-0" >
          <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <a class="navbar-brand" href="/">
            {% if site['logo'] %}
                <img style="width: 100px;" src="{{ site['logo'] }}">
            {% else %}
                Your Logo
            {% endif %}
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                {% if site['auth'] %}
                    {% for menu in menus %}
                        <li{% if site['menuActive'] %} class="nav-item active" {% else %}  class="nav-item" {% endif %}>
                            <a class="nav-link" href="{{ menu['page']['url'] }}">
                                {{ menu['menu_name'] }}
                            </a>
                        </li>
                    {% endfor %}
					<li class="nav-item" >
                            <a class="nav-link" href="{{ site['logout_url']  }}" onclick="event.preventDefault();document.getElementById('logout-form').submit();">
                                Logout
                            </a>
                        </li>
  							<form id="logout-form" action="{{ site['logout_url']  }}" method="POST" class="d-none">
                            {{ site['csrf_field'] | raw }}
                                </form>
                {% else %}
                    {% for menu in menus %}
                        <li{% if menuActive %} class="nav-item active" {% else %}  class="nav-item" {% endif %}>
                            <a class="nav-link" href="{{ menu['page']['url'] }}">
                                {{ menu['menu_name'] }}
                            </a>
                        </li>
                    {% endfor %}
                {% endif %}
            </ul>
        </div>
    </nav>
    </div>
  

	{{ content }}

    {% for script in site['scripts'] %}
    <script type="text/javascript" src="{{ script }}"></script>
    {% endfor %}
</body>
</html>