<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="well">
                <form {% if site['rtl'] %}class="rtl-form"{% endif %} method="post" action="{{ page['url'] }}">
                    {% if 1 == success %}
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4>success</h4>
                            orders: {{order['success']}}<br>
                            errors: {{order['error']}}<br>
                            <a href="{{ order['link'] }}" target="_blank">details</a>
                        </div>
                    {%endif%}
                    {% if error %}
                        <div class="alert alert-dismissible alert-danger {% if site['rtl'] %} rtl-alert {% endif %}">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            {% if order['link'] %}
                                <h4>{{ errorText }}</h4>
                                orders: {{ order['success'] }}<br>
                                errors: {{ order['error'] }}<br>
                                <a href="{{ order['link'] }}" target="_blank">details</a>
                            {% else %}
                                {{ errorText }}
                            {% endif %}
                        </div>
                    {% endif %}
                    <div class="form-group">
                        <label for="links" class="control-label">label</label>
                        <textarea class="form-control" name="MassOrderForm[orders]" rows="15" id="links" placeholder="placeholder"></textarea>
                    </div>
                    <input type="hidden" name="_csrf" value="{{csrftoken}}">
                    <button type="submit" class="btn btn-primary">button</button>
                </form>
            </div>
        </div>
    </div>
</div>
